{% extends "::base_admin.html.twig" %}

{%  block admincontent %}
    Bundles list


    {% for flashMessage in app.session.flashbag.get('message') %}

            <div class="alert alert-info">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table table-striped ">
        <thead>
        <tr>
            <th>Bundle</th>
               <th>Aktion</th>
        </tr>
        </thead>
        <tbody>

        {% for bundle in bundles %}

            <tr>
                <td>{{ bundle.name }}</td>
                <td><button type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {% trans %}Add new language{% endtrans %}
                    </button>

                    <button type="button" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {% trans %}Edit{% endtrans %}
                    </button>
                    <button type="button" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {% trans %}Delete{% endtrans %}
                    </button>


                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a class="btn" href="/admin/user/ /edit"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a class="btn delete-action" data-id="" href="#"><i class="glyphicon glyphicon-trash"></i></a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>




    <!-- Modal -->
    <div id="modalDelete" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title" id="myModalLabel">User löschen</h3>
                </div>
                <div class="modal-body">
                    <p>Soll der User wirklich gelöscht werden?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">Abbrechen</button>
                    <button class="btn btn-primary do-delete-action">User löschen</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var currentDeleteId = undefined; // maybe later: encapsulate in object or something...
        var adminUrl = '{{ path('geschke_website_admin_index') }}';
        $(function () {
            $('.delete-action').click(function () {
                var options = {};
                currentDeleteId = $(this).attr('data-id');
                $('#modalDelete').modal(options);

            });
            $('.do-delete-action').click(function () {
                $('#modalDelete').modal('hide');
                var deleteId = currentDeleteId;
                currentDeleteId = undefined;
                window.location = adminUrl  + 'user/' + deleteId + '/delete';
            });

        });

    </script>


{%  endblock %}
