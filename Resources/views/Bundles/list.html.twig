{% extends "GeschkeAdminTranslatorGUIBundle::base_admin.html.twig" %}

{%  block admincontent %}
    {% trans %}Bundles list{% endtrans %}


    {% for flashMessage in app.session.flashbag.get('message') %}

            <div class="alert alert-info">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table table-striped ">
        <thead>
        <tr>
            <th>Bundle</th>
               <th>Aktion</th>
        </tr>
        </thead>
        <tbody>

        {% for bundle in bundles %}

            <tr class="bundle-item" data-name="{{ bundle.name }}">
                <td class="bundle-name" id="bundle_{{ bundle.name }}">{{ bundle.name }}</td>
                <td>
                    <p><button class="btn-action-language-add" type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {% trans %}Add new language{% endtrans %}
                    </button>
</p>

{% for messageFile in bundle.messageFiles if messageFile|length %}
<p>
            <img src="{{ asset('bundles/geschkeadmintranslatorgui/images/flags/') }}{{ messageFile.locale }}.gif" alt="{{ messageFile.locale }}" />
              &nbsp;
    <button data-locale="{{ messageFile.locale }}" type="button" class="btn-action-edit btn btn-default btn-xs">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {% trans %}Edit{% endtrans %}
    </button>
    <button data-locale="{{ messageFile.locale }}" type="button" class="btn-action-delete btn btn-default btn-xs">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> {% trans %}Delete{% endtrans %}
    </button>
</p>
    {% else %}
    {% trans %}No message file found.{% endtrans %}
                    {% endfor %}

                    <div class="btn-toolbar">
                        <div class="btn-group">
                            <a class="btn" href="/admin/user/ /edit"><i class="glyphicon glyphicon-pencil"></i></a>
                            <a class="btn delete-action" data-id="" href="#"><i class="glyphicon glyphicon-trash"></i></a>
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}


        </tbody>
    </table>




    <!-- Modal -->
    <div id="modalDelete" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                    <h3 class="modal-title" id="myModalLabel"> {% trans %}Delete language file{% endtrans %}</h3>
                </div>
                <div class="modal-body">
                    <p> {% trans %}You are about to delete <strong></strong> from "<strong></strong>" permanently.<br/>Are you sure you wish to delete these files?{% endtrans %}</p>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">{% trans %}Cancel{% endtrans %}</button>
                    <button class="btn btn-primary do-delete-action">{% trans %}Delete file{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        var bundle = undefined; // maybe later: encapsulate in object or something...
        var locale = undefined;
        var adminUrl = '{{ path('geschke_admin_translator_gui_homepage') }}';
        $(function () {
            $('.btn-action-language-add').click(function () {
                var options = {};
                bundle = $(this).parents('.bundle-item').attr('data-name');
                //console.log(bundle);
                window.location = adminUrl  + 'language-add/?bundle=' + bundle;
//                $('#modalDelete').modal(options);

            });

            $('.btn-action-delete').click(function () {
                var options = {};
                bundle = $(this).parents('.bundle-item').attr('data-name');
                locale = $(this).attr('data-locale');
                console.log(bundle);
                console.log(locale);
                $('#modalDelete').modal(options);

            });

            $('.do-delete-action').click(function () {
                $('#modalDelete').modal('hide');
                var deleteBundle = bundle;
                var deleteLocale = locale;
                bundle = undefined;
                locale = undefined;
                window.location = adminUrl  + 'language-delete/?bundle=' + deleteBundle + '&locale=' + deleteLocale;
            });

            $('.btn-action-edit').click(function () {
                var options = {};
                bundle = $(this).parents('.bundle-item').attr('data-name');
                locale = $(this).attr('data-locale');
                window.location = adminUrl  + 'language-edit/?bundle=' + bundle + '&locale=' + locale;

            });



        });

    </script>


{%  endblock %}
