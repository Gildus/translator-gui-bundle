{% extends "GeschkeAdminTranslatorGUIBundle::base_admin.html.twig" %}
{% form_theme form 'GeschkeAdminTranslatorGUIBundle:Form:fields.html.twig' %}


{% block admincontent %}
    {% trans %}Messages{% endtrans %}


    {% for flashMessage in app.session.flashbag.get('message_success') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('message_error') %}

        <div class="alert alert-danger">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table table-striped ">
        <thead>
        <tr>
            <th colspan="3">
                <div class="row">
                    <div class="col-md-5">Key</div>
                    <div class="col-md-5">Translation</div>
                    <div class="col-md-2">Aktion</div>
                </div>
            </th>
        </tr>
        </thead>
        <tbody>

        {% for key, message in messages %}


            <tr class="message-item" data-identifier="{{ key|sha1 }}" data-id="{{ message.getId }}">
                <td colspan="3">

                    <div class="row">

                        <div class="col-md-5" id="message_{{ key|sha1 }}">{{ message.getSourceString }}
                        </div>
                        <div class="col-md-5" id="translation_{{ key|sha1 }}">{{ message.getLocaleString }}
                        </div>
                        <div class="col-md-2">
                            <button data-locale="{{ locale }}" type="button"
                                    class="btn-action-edit btn btn-default btn-xs">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {% trans %}Edit{% endtrans %}
                            </button>
                        </div>
                    </div>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>




    <!-- Modal -->
    <div id="modalTranslate" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h3 class="modal-title" id="myModalLabel"> {% trans %}Translate message{% endtrans %}</h3>
                </div>
                <div class="modal-body" id="modal-edit-body" data-identifier="">

                    {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal" aria-hidden="true">{% trans %}Cancel{% endtrans %}</button>
                    <button class="btn btn-primary do-edit-action">{% trans %}Save Message{% endtrans %}</button>
                </div>
            </div>
        </div>
    </div>



